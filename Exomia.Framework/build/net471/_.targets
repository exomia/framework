<?xml version="1.0" encoding="utf-8"?>

<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <Reference Include="$(MSBuildThisFileName)">
      <HintPath>$(MSBuildThisFileDirectory)win\$(MSBuildThisFileName).Debug.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!--INFO: CHANGE THE NAME-->
  <Target Name="ExomiaFramework" AfterTargets="AfterBuild">
    <PropertyGroup>
      <LibFile Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">$(MSBuildThisFileDirectory)win\$(MSBuildThisFileName).Debug.dll</LibFile>
      <LibFile Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">$(MSBuildThisFileDirectory)win\$(MSBuildThisFileName).Release.dll</LibFile>

      <LibFile Condition=" '$(Configuration)|$(Platform)' == 'Debug|x86' ">$(MSBuildThisFileDirectory)win\x86\$(MSBuildThisFileName).Debug.dll</LibFile>
      <LibFile Condition=" '$(Configuration)|$(Platform)' == 'Release|x86' ">$(MSBuildThisFileDirectory)win\x86\$(MSBuildThisFileName).Release.dll</LibFile>

      <LibFile Condition=" '$(Configuration)|$(Platform)' == 'Debug|x64' ">$(MSBuildThisFileDirectory)win\x64\$(MSBuildThisFileName).Debug.dll</LibFile>
      <LibFile Condition=" '$(Configuration)|$(Platform)' == 'Release|x64' ">$(MSBuildThisFileDirectory)win\x64\$(MSBuildThisFileName).Release.dll</LibFile>
    </PropertyGroup>
    <Copy
      SourceFiles="$(LibFile)"
      DestinationFiles="$(TargetDir)$(MSBuildThisFileName).dll"
      SkipUnchangedFiles="true" />
    <Message
      Text="copying $(LibFile) to $(TargetDir)$(MSBuildThisFileName).dll"
      Importance="High" />
  </Target>
</Project>