    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Exomia.Vulkan.Api.Core" Version="0.2.175.10" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**\*Game\RenderForm.cs"></Compile>
    <Compile Update="**\*Game\RenderForm.*.cs">
      <DependentUpon>RenderForm.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Mathematics\Math2.cs"></Compile>
    <Compile Update="Mathematics\Math2.*.cs">
      <DependentUpon>Math2.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Graphics\SpriteBatch.cs"></Compile>
    <Compile Update="Graphics\SpriteBatch.*.cs">
      <DependentUpon>SpriteBatch.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Graphics\Canvas.cs"></Compile>
    <Compile Update="Graphics\Canvas.*.cs">
      <DependentUpon>Canvas.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Graphics\SpriteFont.cs"></Compile>
    <Compile Update="Graphics\SpriteFont.*.cs">
      <DependentUpon>SpriteFont.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Vulkan\Vulkan.cs"></Compile>
    <Compile Update="Vulkan\Vulkan.*.cs">
      <DependentUpon>Vulkan.cs</DependentUpon>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <None Include="..\..\.editorconfig" Link=".editorconfig" />
    <None Include="..\..\LICENSE" Pack="true" Visible="false" PackagePath="" />
    <None Include="..\..\icon.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>Exomia.Framework.Linux, </_Parameter1>
    </AssemblyAttribute>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>Exomia.Framework.Windows, </_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <!-- Source Link Support -->
  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <IncludeSymbols>true</IncludeSymbols>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Deterministic>True</Deterministic>
    <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)'=='true'">True</ContinuousIntegrationBuild>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)'=='Debug'">
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>
</Project>